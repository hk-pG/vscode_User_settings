{
  // ターミナルの設定
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  // "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
  "terminal.integrated.fontWeight": "bold",
  "terminal.integrated.shellIntegration.enabled": true,
  "workbench.colorCustomizations": {
    "terminal.background": "#090300",
    "terminal.foreground": "#FDED02",
    "terminalCursor.background": "#A5A2A2",
    "terminalCursor.foreground": "#A5A2A2",
    "terminal.ansiBlack": "#090300",
    "terminal.ansiBlue": "#01A0E4",
    "terminal.ansiBrightBlack": "#5C5855",
    "terminal.ansiBrightBlue": "#01A0E4",
    "terminal.ansiBrightCyan": "#B5E4F4",
    "terminal.ansiBrightGreen": "#01A252",
    "terminal.ansiBrightMagenta": "#A16A94",
    "terminal.ansiBrightRed": "#DB2D20",
    "terminal.ansiBrightWhite": "#F7F7F7",
    "terminal.ansiBrightYellow": "#FDED02",
    "terminal.ansiCyan": "#B5E4F4",
    "terminal.ansiGreen": "#01A252",
    "terminal.ansiMagenta": "#A16A94",
    "terminal.ansiRed": "#DB2D20",
    "terminal.ansiWhite": "#A5A2A2",
    "terminal.ansiYellow": "#FDED02"
  },

  "remote.SSH.remotePlatform": {
    "student.hamako-ths.ed.jp": "linux"
  },

  // start =========================================================================

  // エディタの背景色
  // "workbench.colorTheme": "Default High Contrast",
  // エディタのファイルアイコン
  "workbench.iconTheme": "material-icon-theme",
  // ファイルタブの折返し
  "workbench.editor.wrapTabs": true,
  // ファイルエクスプローラ等のバーを右側に設定する
  "workbench.sideBar.location": "right",
  // ファイルを新しいタブで開く
  "workbench.editor.enablePreview": false,

  "window.commandCenter": true,

  //エディタの基本のフォントサイズを決める
  "editor.fontSize": 15,
  "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 4,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.minimap.enabled": true,

  //エディタのフォントの太さを決める : boldやnormalの他に、100, 200, 900, 等の数値のみで決める
  // "editor.fontWeight": "bold",
  "editor.linkedEditing": true,
  "editor.renderControlCharacters": true,
  "editor.suggestSelection": "first",
  "editor.autoClosingBrackets": "always",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "liveServer.settings.donotShowInfoMsg": true,
  "explorer.confirmDelete": false,
  "tabnine.experimentalAutoImports": true,
  "diffEditor.ignoreTrimWhitespace": false,

  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // git関連
  "git.enableSmartCommit": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.autoClosingQuotes": "always",
  "explorer.confirmDragAndDrop": false,
  "editor.insertSpaces": false,
  "git.mergeEditor": true,
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "java": true
  },
  "git.autofetch": true,

  // NeoVim関連 [
  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.vim",
  // "vscode-neovim.neovimExecutablePaths.linux": "/home/student/ei/ei20/ei2030/nvim/bin/nvim",
  // "vscode-neovim.neovimExecutablePaths.win32": "/home/student/ei/ei20/ei2030/.config/nvim",
  // "http.proxy": "http://ei2030:hukada114514@proxy.hamako-ths.ed.jp:8080/",
  // "http.proxyStrictSSL": false,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "editor.inlayHints.fontSize": 4,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.inlineSuggest.enabled": true,
  // NeoVim関連 ]

  // 言語ごとの設定[
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },

  "[javascript]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[typescript]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsx]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[tsx]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },

  "[jsonc]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // =========================================================================
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],

  "cSpell.userWords": [
    "autofetch",
    "Behaviour",
    "browserslist",
    "bunbo",
    "bunsi",
    "caniuse",
    "classpath",
    "colorette",
    "compat",
    "cpptools",
    "craco",
    "donot",
    "envinfo",
    "esbenp",
    "esrecurse",
    "estraverse",
    "execa",
    "factorypath",
    "fgets",
    "gaearon",
    "hamako",
    "isexe",
    "isobject",
    "Menlo",
    "Meslo",
    "mixins",
    "monospace",
    "neovim",
    "nvim",
    "Perim",
    "phar",
    "phina",
    "picomatch",
    "Powerline",
    "printf",
    "randombytes",
    "rechoir",
    "requring",
    "sscanf",
    "struct",
    "tabnine",
    "tailwindcss",
    "tapable",
    "typesync",
    "vcanvas",
    "vctx",
    "verdana",
    "watchpack",
    "yallist",
    "yocto"
  ],
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "files.maxMemoryForLargeFilesMB": 8192,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "dart.openDevTools": "flutter",
  "dart.flutterSdkPath": "/Users/hk-p/.asdf/installs/flutter/3.0.5-stable",
  "editor.minimap.size": "fill",
  "workbench.colorTheme": "Winter is Coming (Dark Blue)",
  "redhat.telemetry.enabled": true,
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": false,
  "powermode.enabled": false,
  "material-icon-theme.opacity": 0.8

  // ]
}
